<text>pages/view/view.wxml</text>

<!-- 1.view基本使用 -->
<view class="box">哈哈哈哈哈哈哈哈哈</view>

<!-- 2.hover-class属性：当用户按下组件，显示的样式 -->
<view class="box1" hover-class="hover-view" hover-stay-time="{{9999}}">box1</view>

<!--3.属性hover-stop-propagation 阻止祖先组件的点击态  -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" hover-class="hover-view" hover-stay-time="{{0}}"
  hover-stop-propagation>box1
    </view>
</view>